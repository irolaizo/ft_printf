#include "ft_printf.h"
#include <stdio.h>

int main (void)
{
	int		total;
	char	*harry;
	char	caracter;
	int		i;
	int		j;

//%u Imprime un número decimal (base 10) sin signo - tiene que imprimir positivo.
	/*total = -120;
	i = printf("ORIGINAL: %u\n", total);
	j = ft_printf(("MIO: %u\n", total));
	printf("%d: %d: ", i, j);*/
	
	total = 120;
	i = printf("ORIGINAL: %u\n", total);
	j = ft_printf("MIO: %u\n", total);
	printf("%d: %d: ", i, j);

//%d Imprime un número decimal (base 10).	
	total = printf("hola\n");
	i = printf("ORIGINAL: %d\n", total);
	j = ft_printf("MIO: %d\n", total);
	
	total = ft_printf("hola\n");
	i = printf("ORIGINAL: %d\n", total);
	j = ft_printf("MIO: %d\n", total);

//%i Imprime un entero en base 10.
	total = printf("mundo\n");
	i = printf("ORIGINAL: %i\n", total);
	j = ft_printf("MIO: %i\n", total);
	
	total = ft_printf("mundo\n");
	i = printf("ORIGINAL: %i\n", total);
	j = ft_printf("MIO: %i\n", total);

//%s Imprime una string (como se define por defecto en C).
	harry = "believe";
	total = printf("%s\n", harry);
	i = printf("ORIGINAL: %d\n", total);
	j = ft_printf("MIO: %d\n", total);
	
	total = ft_printf("%s\n", harry);
	i = printf("ORIGINAL: %d\n", total);
	j = ft_printf("MIO: %d\n", total);
	
	harry = NULL;
	total = printf("%s\n", harry);
	i = printf("ORIGINAL: %d\n", total);
	j = ft_printf("MIO: %d\n", total);
	
	total = ft_printf("%s\n", harry);
	i = printf("ORIGINAL: %d\n", total);
	j = ft_printf("MIO: %d\n", total);

//%c Imprime un solo carácter.
	caracter = 'a';
	total = printf("%c\n", caracter);
	i = printf("ORIGINAL: %d\n", total);
	j = ft_printf("MIO: %d\n", total);

	total = ft_printf("%c\n", caracter);
	i = printf("ORIGINAL: %d\n", total);
	j = ft_printf("MIO: %d\n", total);

//%p El puntero void * dado como argumento se imprime en formato hexadecimal - imprime dirección de memoria del puntero.
	harry = "believe";
	total = printf("%p\n", harry);
	i = printf("ORIGINAL: %d\n", total);
	j = ft_printf("MIO: %d\n", total);

	total = ft_printf("%p\n", harry);
	i = printf("ORIGINAL: %d\n", total);
	j = ft_printf("MIO: %d\n", total);
	
	harry = NULL;
	total = printf("%p\n", harry);
	i = printf("ORIGINAL: %d\n", total);
	j = ft_printf("MIO: %d\n", total);

	total = ft_printf("%p\n", harry);
	i = printf("ORIGINAL: %d\n", total);
	j = ft_printf("MIO: %d\n", total);

//%x Imprime un número hexadecimal (base 16) en minúsculas - imprime de hexadecimal a decimal (los punteros estan en formato hexadecimal)
	total = 42;
	total = printf("%x\n", total);
	i = printf("ORIGINAL: %d\n", total);
	j = ft_printf("MIO: %d\n", total);

	total = ft_printf("%x\n", total);
	i = printf("ORIGINAL: %d\n", total);
	j = ft_printf("MIO: %d\n", total);
	
	total = 0;
	total = printf("%x\n", total);
	i = printf("ORIGINAL: %d\n", total);
	j = ft_printf("MIO: %d\n", total);

	total = ft_printf("%x\n", total);
	i = printf("ORIGINAL: %d\n", total);
	j = ft_printf("MIO: %d\n", total);

//%X Imprime un número hexadecimal (base 16) en mayúsculas.
	total = 42;
	total = printf("%X\n", total);
	i = printf("ORIGINAL: %d\n", total);
	j = ft_printf("MIO: %d\n", total);

	total = ft_printf("%X\n", total);
	i = printf("ORIGINAL: %d\n", total);
	j = ft_printf("MIO: %d\n", total);

//% % para imprimir el símbolo del porcentaje
	total = printf("%X\n", total);
	i = printf("ORIGINAL: %d\n", total);
	j = ft_printf("MIO: %d\n", total);

	total = ft_printf("%X\n", total);
	i = printf("ORIGINAL: %d\n", total);
	j = ft_printf("MIO: %d\n", total);
}